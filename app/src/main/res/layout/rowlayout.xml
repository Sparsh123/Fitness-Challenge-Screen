<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:background="@drawable/border"
    android:orientation="vertical">
    <!--
    items for a single row of RecyclerView
    -->

<RelativeLayout
    android:id="@+id/relUpper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pos"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/pos_round_rect"
        android:backgroundTint="@color/barBlue"
        android:layout_marginTop="20dp"

        android:layout_toRightOf="@id/image"
        android:gravity="center"

        android:textSize="13dp"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/pos"
        android:layout_alignTop="@id/image"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/name"
        android:text="((creator))"
        android:layout_alignTop="@id/image"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
android:layout_above="@id/bar"
        android:textColor="@color/darkBlue"
        android:textSize="20sp" />


    <TextView

        android:id="@+id/bar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

android:layout_toRightOf="@id/image"

android:layout_alignBottom="@id/image"
        android:layout_marginBottom="8dp"

android:background="@drawable/bar_round_rect"
        android:backgroundTint="@color/barBlue"
         />

    <ImageView
        android:id="@+id/ivMan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/bar"
        android:layout_alignBottom="@id/bar"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/barBlue"

        app:srcCompat="@drawable/running_man" />

</RelativeLayout>


</RelativeLayout>